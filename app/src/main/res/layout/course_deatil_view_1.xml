<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/course_meta_container"
                android:layout_gravity="center"
                android:background="@drawable/course_bg">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:id="@+id/author_img"
                        />
                    <!--android:background="@drawable/author_1"-->

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Stuart Little"
                            android:layout_margin="10dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:id="@+id/author_name" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Chemistry"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:id="@+id/title" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Built-in objects and functions (JSON, Math, Array.prototype methods, Object introspection methods...).Strict mode Browser support .As of August 2014, the current versions of the major Web browsers implement ECMAScript 5.1, but older versions (still in use) implement ECMAScript 3 and only parts of ECMAScript 5. Nowadays browsers already implement large parts of ECMAScript 6."
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:id="@+id/description" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:weightSum="4">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:src="@drawable/vsm_icn_chapters"
                    android:background="@drawable/black_bacground" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton2"
                    android:layout_weight="1"
                    android:background="@drawable/black_bacground"
                    android:src="@drawable/vsm_icn_concepts" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@drawable/black_bacground"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton3"
                    android:layout_weight="1"
                    android:src="@drawable/vsm_icn_annotation" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@drawable/black_bacground"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton4"
                    android:layout_weight="1"
                    android:src="@drawable/vsm_icn_definition" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:id="@+id/sub_fragment_container"></FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>